<Window x:Class="Talamus_ContentManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Talamus_ContentManager"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="392" Width="639">
    <Grid>
        <Label Content="Default path to DB:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbDbPath" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="588" Height="101"/>
        <Label Content="Bot token:" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbToken" HorizontalAlignment="Left" Margin="10,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="588" Height="65"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="146,270,0,0" VerticalAlignment="Top" Height="57" Width="316" Click="Button_Click"/>

    </Grid>
</Window>
